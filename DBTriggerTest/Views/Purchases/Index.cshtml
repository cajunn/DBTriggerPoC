@using DBTriggerTest.Controllers
@model PurchaseIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Quantity
            </th>
            <th>
                Product
            </th>
            <th>
                Customer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Purchases) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<br />
<h1>Audits</h1>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                AuditId
            </th>
            <th>
                PurchaseId
            </th>
            <th>
                Operation
            </th>
            <th>
                ModifiedBy
            </th>
            <th>
                ModifiedAt
            </th>
            <th>
                OldValues
            </th>
            <th>
                NewValues
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PurchaseAudits)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AuditID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Operation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OldValues)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewValues)
                </td>
            </tr>
        }
    </tbody>
</table>